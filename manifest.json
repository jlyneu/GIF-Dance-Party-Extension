{
  "manifest_version": 2,

  "name": "GIF Dance Party Extension",
  "description": "A Chrome Extension inspired by http://gifdanceparty.giphy.com/",
  "version": "1.2.1",
  "icons" : {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" },
    "browser_action":{
    },
  "background": {
    "scripts": [
        "src/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
          "src/css/animate.css",
          "src/css/styles.css"
      ],
      "js": [
        "src/lib/jquery.js",
        "src/lib/jquery-ui.min.js",
        "src/lib/jquery-migrate-1.2.1.js",
        "src/js/harlemshake.js",
        "src/js/media.js",
        "src/js/changelog.js",
        "src/js/script.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}
